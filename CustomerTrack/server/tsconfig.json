{
    "compilerOptions": {
      "target": "ES2020",                          // Set the target ECMAScript version
      "module": "commonjs",                       // Set the module system
      "lib": ["ES2020", "DOM"],                    // Specify library files to be included
      "allowJs": true,                            // Allow JavaScript files to be compiled
      "outDir": "./dist",                         // Redirect output structure to the directory
      "rootDir": "./src",                         // Specify the root directory of input files
      "strict": true,                             // Enable all strict type-checking options
      "esModuleInterop": true,                    // Enables emit interoperability between CommonJS and ES Modules
      "skipLibCheck": true,                       // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true,   // Ensure that casing of filenames is consistent
      "noImplicitAny": true,                      // Raise an error on expressions and declarations with an implied 'any' type
      "noUnusedParameters": true,                 // Report errors on unused parameters
      "noUnusedLocals": false,                     // Report errors on unused locals
      "moduleResolution": "node",                 // Use Node.js module resolution strategy
      "resolveJsonModule": true,                  // Allow importing .json files
      "sourceMap": true,                          // Generate corresponding '.map' file
      "experimentalDecorators": true,             // Enable experimental support for decorators
      "emitDecoratorMetadata": true ,              // Emit design-type metadata for decorated declarations
      "allowImportingTsExtensions": true ,
      "noEmit": true    ,
      
    },
    "include": ["src/**/*"],                      // Include all files in the src directory
    "exclude": ["node_modules", "**/*.test.ts"]   // Exclude node_modules and test files
  }
  